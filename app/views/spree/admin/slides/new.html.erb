<% content_for :page_title do %>
  <%= Spree.t(:new_slide) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= link_to_with_icon 'arrow-left', Spree.t(:back_to_slides), admin_slide_location_slides_path(@slide_location), :class => 'button' %></li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @slide } %>

<%= form_for [:admin, @slide_location, @slide] , :html => { :multipart => true } do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/new_resource_links', locals: { collection_url: admin_slide_location_slides_url(@slide_location) } %>
  </fieldset>
<% end %>
