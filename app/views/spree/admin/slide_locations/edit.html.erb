<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:editing_slide_location) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_slide_locations), spree.admin_slide_locations_path, :icon => 'arrow-left' %></li>
  <% if can?(:create, Spree::SlideLocation) %>
    <li id="admin_new_slide_location_link">
      <%= button_link_to Spree.t(:new_slide_location), new_object_url, { :icon => 'plus', :id => 'admin_new_slide_location' } %>
    </li>
  <% end %>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @slide_location } %>

<%= form_for [:admin, @slide_location] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <div class="clear"></div>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
