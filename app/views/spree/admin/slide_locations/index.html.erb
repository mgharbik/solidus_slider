<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_actions do %>
  <ul class="actions inline-menu">
    <li>
       <%= button_link_to Spree.t(:new_slider_location), new_object_url, { :icon => 'plus', :id => 'admin_new_slide_location_link' } %>
    </li>
  </ul>
<% end %>

<% content_for :page_title do %>
  <%= Spree.t(:slider_locations) %>
<% end %>

<table class="index" id="listing_slide_locations" data-hook >
  <colgroup>
    <col style="width: 90%" />
    <col style="width: 10%" />
  </colgroup>
  <thead>
    <tr data-hook="tax_header">
      <th><%= Spree.t(:name) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @slide_locations.each do |location|%>
      <tr id="<%= spree_dom_id location %>" data-hook="location_row" class="<%= cycle('odd', 'even')%>">
        <td class="align-center"><%= location.name %></td>
        <td class="actions">
          <%= link_to_edit location, :no_text => true %>
          <%= link_to_delete location, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

